{
    "dockerFile": "Dockerfile",
    "name": "Streamlit Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
			"WORKSPACE": "${containerWorkspaceFolder}"
		}
    },
    "features": {
        "node": {
            "version": "lts"
        }
    }
    ,
    "customizations": {
		"vscode": {
			"extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
			]
		}
	},
    "forwardPorts": [
        3000,
        8501
    ],
    "postCreateCommand": "chmod +x ./scripts/init-devcontainer.sh && ./scripts/init-devcontainer.sh ${containerWorkspaceFolder}",
}
